<!doctype html>
<html lang="en" class="login-content" data-ng-app="materialAdmin">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="Author" content="">
    <meta name="Keywords" content="">
    <meta name="Description" content="">
    <title>Admin</title>

    <link rel="shortcut icon" type="image/x-icon" href="/static/login/favicon.ico"/>
    <!-- Vendor CSS -->
    <link href="/static/login/css/material-design-iconic-font/css/material-design-iconic-font.min.css" rel="stylesheet"
          type="text/css">
    <!-- CSS -->
    <link href="/static/login/css/app.min.1.css" rel="stylesheet" type="text/css">
</head>
<body class="login-content" data-ng-controller="loginCtrl as lctrl">

<div class="lc-block" id="l-login" data-ng-class="{'toggled':lctrl.login === 1}">
    <h1 class="lean">SBlog</h1>

    <form action="/login" method="post" id="login">
        <div class="input-group m-b-20">
    		<span class="input-group-addon">
    			<i class="zmdi zmdi-account"></i>
    		</span>

            <div class="fg-line">
                <input type="text" name="username" class="form-control" placeholder="用户名称" />
            </div>
        </div>

        <div class="input-group m-b-20">
    		<span class="input-group-addon">
    			<i class="zmdi zmdi-key"></i>
    		</span>

            <div class="fg-line">
                <input type="password" name="password" class="form-control" placeholder="用户密码" />
            </div>
        </div>

        <div class="input-group m-b-20">
    		<span class="input-group-addon">
    			<i class="zmdi zmdi-image-o"></i>
    		</span>

            <div class="fg-line">
                <input type="text" name="code" class="form-control" placeholder="验证码" />
            </div>

        </div>
        <div>
            <img src="/login/codeimg"/>
        </div>

        <div class="clearfix"></div>

        <div class="checkbox zmdi-format-align-center">
            <label>
                <input type="checkbox" value="" name="remember"/>
                <i class="input-helper">
                    保持登录状态
                </i>
            </label>
        </div>

        <a onclick="document.getElementById('login').submit();" class="btn btn-login btn-danger btn-float">
            <i class="zmdi zmdi-arrow-forward"></i>
        </a>
    </form>
</div>


</body>

<script src="/static/login/js/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/static/login/js/log.js"></script>
<!-- Angular -->
<script src="/static/login/js/bower_components/angular/angular.min.js"></script>
<script src="/static/login/js/bower_components/angular-resource/angular-resource.min.js"></script>
<script src="/static/login/js/bower_components/angular-animate/angular-animate.min.js"></script>


<!-- Angular Modules -->
<script src="/static/login/js/bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
<script src="/static/login/js/bower_components/angular-loading-bar/src/loading-bar.js"></script>
<script src="/static/login/js/bower_components/oclazyload/dist/ocLazyLoad.min.js"></script>
<script src="/static/login/js/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>

<!-- Common js -->
<script src="/static/login/js/bower_components/angular-nouislider/src/nouislider.min.js"></script>
